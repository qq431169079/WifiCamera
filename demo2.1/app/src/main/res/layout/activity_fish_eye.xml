<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_color" >

        <Button
            android:id="@+id/btn_return"
            android:layout_width="52dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@drawable/selector_btn_title_back" />

        <TextView
            android:id="@+id/tv_install_mode_"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#00a8ff"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl__fish_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top" >

        <com.thecamhi.base.MyLiveViewGLMonitor
            android:id="@+id/monitor_live_view"
            android:layout_width="match_parent"
            android:layout_height="360dp" />

        <LinearLayout
            android:id="@+id/ll_four_bg_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_focus_one_live"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_focus_bg"
                    android:clickable="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_focus_two_live"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_focus_bg"
                    android:clickable="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_focus_three_live"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_focus_bg"
                    android:clickable="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_focus_four_live"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_focus_bg"
                    android:clickable="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_loading2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:src="@drawable/loading2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_timezone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="2017:09:29"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_recording"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/shape_circle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_recording"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/iv_recording"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_recording"
            android:gravity="center"
            android:text="@string/txt_recording"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_full_screen"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/monitor_live_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_full_screen"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/full_screen"
            android:tint="#ffffff"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_loading2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:src="@drawable/loading2"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_buttom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl__fish_live"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/fish_view_model"
            android:textColor="#666666"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_view_model"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <RadioGroup
                android:id="@+id/rg_view_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_model"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rbtn_wall_overallview"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/selector_pup_wall"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:visibility="gone" />

                <RadioButton
                    android:id="@+id/rbtn_circle"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/selector_pup_circluer"
                    android:button="@null"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/rbtn_cylinder"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/selector_pup_roundboby"
                    android:button="@null"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/rbtn_bowl"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/selector_pup_bowl"
                    android:button="@null"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/rbtn_two"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/selector_pup_two"
                    android:button="@null"
                    android:gravity="center_vertical" />

                <RadioButton
                    android:id="@+id/rbtn_four"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="35dp"
                    android:background="@drawable/selector_pup_four"
                    android:button="@null"
                    android:gravity="center_vertical" />
            </RadioGroup>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:gravity="fill_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="8dp" >

            <RelativeLayout
                android:id="@+id/rl_voice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_voice"
                    android:layout_width="@dimen/live_iv_width"
                    android:layout_height="@dimen/live_iv_hei"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_fish_iv_bg"
                    android:padding="8dp"
                    android:src="@drawable/selector_voice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/iv_voice"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:text="@string/fish_listen"
                    android:textColor="@color/color_live_txt"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_talk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_talk"
                    android:layout_width="@dimen/live_iv_width"
                    android:layout_height="@dimen/live_iv_hei"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_fish_iv_bg"
                    android:padding="8dp"
                    android:src="@drawable/selector_talk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/iv_talk"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:text="@string/fish_talk"
                    android:textColor="@color/color_live_txt"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_snapshot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_snapshot"
                    android:layout_width="@dimen/live_iv_width"
                    android:layout_height="@dimen/live_iv_hei"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_fish_iv_bg"
                    android:padding="8dp"
                    android:src="@drawable/selector_snapshot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/iv_snapshot"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:text="@string/fish_snap"
                    android:textColor="@color/color_live_txt"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_record_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_record_video"
                    android:layout_width="@dimen/live_iv_width"
                    android:layout_height="@dimen/live_iv_hei"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_fish_iv_bg"
                    android:padding="8dp"
                    android:src="@drawable/selector_record" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/iv_record_video"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:text="@string/tit_video"
                    android:textColor="@color/color_live_txt"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cruise"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_live_cruise"
                    android:layout_width="@dimen/live_iv_width"
                    android:layout_height="@dimen/live_iv_hei"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_fish_iv_bg"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="8dp"
                    android:src="@drawable/selector_live_cruis" />

                <TextView
                    android:id="@+id/tv_live_cruise"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/iv_live_cruise"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:text="@string/fish_cruise"
                    android:textColor="@drawable/selector_live_tvcruise"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- android:background="#88666666" -->

    <RelativeLayout
        android:id="@+id/rl_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bb666666"
        android:clickable="true"
        android:visibility="gone" >

        <com.customview.CircularView
            android:id="@+id/circular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </com.customview.CircularView>

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circular"
            android:layout_centerHorizontal="true"
            android:paddingLeft="3dp"
            android:paddingRight="5dp"
            android:text="@string/fish_divide_nine"
            android:textColor="#008000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_one"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/fish_dou_elg"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/shape_know_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="@string/fish_know"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>